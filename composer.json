{
    "name": "helsingborg-stad/modularity-products",
    "description": "An addon for displaying products.",
    "type": "wordpress-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Freya Liljeberg",
            "email": "freya.liljeberg@helsingborg.se"
        }
    ],
    "minimum-stability": "stable",
    "require": {},
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/helsingborg-stad/modularity-products.git"
        }
    ],
    "extra" : {
        "builder": {
            "commands": [
                "npm install --no-progress",
                "npx browserslist@latest --update-db",
                "npm run build",
                "composer install --prefer-dist --no-progress"
            ],
            "removables": [
                ".git",
                ".gitignore",
                ".github",
                "build.php",
                "composer.json",
                "composer.lock",
                "webpack.config.js",
                "node_modules",
                "package-lock.json",
                "package.json"
            ]
        }
    }
}
